{
  "private": true,
  "name": "sugarcube-discovery",
  "description": "Support human rights investigators with a discover and preservation workflow.",
  "license": "GPL-3.0",
  "author": "Christo <christo@cryptodrunks.net>",
  "homepage": "https://github.com/critocrito/sugarcube-discovery",
  "repository": "git@github.com:critocrito/sugarcube-discovery.git",
  "version": "0.0.1",
  "scripts": {
    "prebuild": "yarn verify",
    "build": "yarn compile",
    "prebump": "yarn verify",
    "bump": "standard-version -i CHANGELOG.md -m \"chore(release): bumped to version %s\" --sign",
    "postbump": "git push --follow-tags origin master",
    "bundle": "web-ext build -s dist",
    "clean": "rimraf dist",
    "compile": "yarn compile:prod",
    "compile:dev": "webpack --mode development",
    "compile:prod": "webpack --mode production",
    "compile:watch": "yarn compile:dev -w",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export",
    "dev": "web-ext run -s ./dist",
    "fix": "yarn lint --fix",
    "lint": "eslint src/js/**/*.ts src/js/**/*.tsx",
    "prestart": "yarn compile:dev",
    "start": "concurrently --kill-others \"yarn compile:watch\" \"yarn type-check:watch\" \"yarn dev\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "verify": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.1",
    "slugify": "^1.3.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-react-jsx": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "autoprefix": "^1.0.1",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "jsonlint": "^1.6.3",
    "lint-staged": "^9.4.3",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-css-variables": "^0.13.0",
    "postcss-import": "^12.0.1",
    "postcss-load-plugins": "^2.3.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-svg": "^3.0.0",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.0",
    "react-cosmos": "^5.0.0-rc.0",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "typescript-eslint-parser": "^22.0.0",
    "typescript-language-server": "^0.4.0",
    "url-loader": "^2.2.0",
    "web-ext": "^3.2.1",
    "web-ext-types": "^3.2.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-extension-manifest-plugin": "^0.5.0"
  }
}
